{
    "extends": [
        "tslint-eslint-rules",
        "tslint:recommended"
    ],
    "rules": {
        "array-type": false,
        "array-bracket-spacing": [
            true,
            "always"
        ],
        "arrow-parens": false,
        "arrow-return-shorthand": [
            true
        ],
        "brace-style": [
            true,
            "1tbs"
        ],
        "block-spacing": [
            true,
            "never"
        ],
        "class-name": true,
        "comment-format": [
            true,
            "check-space"
        ],
        "curly": true,
        "deprecation": {
            "severity": "warning"
        },
        "encoding": true,
        "eofline": true,
        "import-spacing": true,
        "import-blacklist": [
            true,
            "rxjs/Rx"
        ],
        "interface-name": false,
        "indent": [
            true,
            "spaces",
            4
        ],
        "linebreak-style": [
            true,
            "LF"
        ],
        "max-classes-per-file": false,
        "max-line-length": [
            true,
            200
        ],
        "member-access": false,
        "member-ordering": [
            true,
            {
                "order": [
                    "static-field",
                    "instance-field",
                    "static-method",
                    "instance-method"
                ]
            }
        ],
        "no-console": [
            true,
            "debug",
            "info",
            "time",
            "timeEnd",
            "trace"
        ],
        "no-inferrable-types": [
            true,
            "ignore-params"
        ],
        "no-non-null-assertion": true,
        "no-switch-case-fall-through": true,
        "no-shadowed-variable": false,
        "no-var-requires": false,
        "no-constant-condition": true,
        "no-duplicate-case": true,
        "no-duplicate-imports": true,
        "no-empty": false,
        "no-empty-interface": true,
        "no-extra-semi": true,
        "no-namespace": false,
        "no-inner-declarations": [
            true,
            "both"
        ],
        "no-irregular-whitespace": true,
        "no-sparse-arrays": true,
        "no-unexpected-multiline": true,
        "no-unsafe-finally": true,
        "no-eval": true,
        "no-multi-spaces": true,
        "no-duplicate-variable": true,
        "no-string-throw": true,
        "no-consecutive-blank-lines": [
            true,
            1
        ],
        "no-trailing-whitespace": true,
        "no-var-keyword": true,
        "no-this-assignment": [
            true,
            {
                "allowed-names": [
                    "^that$"
                ]
            }
        ],
        "object-literal-key-quotes": [
            true,
            "as-needed"
        ],
        "object-literal-sort-keys": false,
        "object-curly-spacing": true,
        "ordered-imports": [
            true,
            {
                "grouped-imports": true
            }
        ],
        "prefer-for-of": true,
        "prefer-method-signature": false,
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ],
        "space-in-parens": [
            true,
            "never"
        ],
        "space-within-parens": [
            true,
            0
        ],
        "switch-default": false,
        "triple-equals": false,
        "ter-no-tabs": true,
        "ter-indent": [
            true,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "trailing-comma": [
            true,
            {
                "multiline": "never",
                "singleline": "never"
            }
        ],
        "type-literal-delimiter": true,
        "variable-name": [
            true,
            "ban-keywords"
        ]
    }
}
